{
  "version": 2,
  "name": "dijinew-fullstack",
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "server/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "client/dist/$1"
    }
  ],
  "outputDirectory": "client/dist",
  "buildCommand": "cd client && npm install && npm run build",
  "env": {
    "NODE_ENV": "production",
    "CLIENT_URL": "https://dijinew.vercel.app",
    "BACKEND_API_URL": "https://dijinew.vercel.app"
  },
  "functions": {
    "server/server.js": {
      "includeFiles": "server/**"
    }
  }
}